{
  "name": "@salina-app/pdf-viewer-core",
  "version": "2.0.0",
  "description": "Framework-agnostic PDF viewer core library",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.mts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.mts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js"
    },
    "./styles": "./dist/styles/index.css"
  },
  "scripts": {
    "build": "tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "pdf",
    "viewer",
    "highlighting",
    "search",
    "typescript",
    "framework-agnostic"
  ],
  "author": "Salina Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salina-team/pdf-viewer.git",
    "directory": "packages/core"
  },
  "peerDependencies": {
    "pdfjs-dist": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/salina-team/pdf-viewer/issues"
  },
  "homepage": "https://github.com/salina-team/pdf-viewer#readme"
}
